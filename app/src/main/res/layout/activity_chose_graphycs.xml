<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manu.ChoseGraphycsActivity">



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plot"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Графики"
        android:textSize="18dp"
        android:transitionName="chart"
        android:drawableTop="@drawable/plot"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:drawablePadding="10dp"
        android:background="@drawable/main_element_2"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:layout_gravity="fill_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/head"
        android:layout_below="@+id/plot"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        android:text="какой график функции вы хотите создать ?"/>



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/gird"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/head">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textHead2"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:id="@+id/gird"
            android:rowCount="2"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center"
            android:backgroundTint="#2F000000"
            android:background="@drawable/buttons1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/graph"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="постройте свой график с вводом кординатами x,y"
                android:padding="10dp"
                android:textSize="15dp"
                android:drawableTint="@color/white"
                android:drawableTop="@drawable/graphuser"
                android:drawablePadding="10dp"
                android:background="@drawable/main_element_2"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="fill_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/velocity"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="график скорости по соотношению времени и ускорении"
                android:padding="10dp"
                android:textSize="15dp"
                android:drawableTint="@color/white"
                android:drawableTop="@drawable/v_alph"
                android:drawablePadding="10dp"
                android:background="@drawable/main_element_2"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="fill_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/force"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="график силы по соотношению времени"
                android:padding="10dp"
                android:textSize="15dp"
                android:drawableTint="@color/white"
                android:drawableTop="@drawable/f_alph"
                android:drawablePadding="10dp"
                android:background="@drawable/main_element_2"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="fill_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/amplitude"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="график амплитуды/времени в мат. маяатнике"
                android:padding="10dp"
                android:textSize="15dp"
                android:drawableTint="@color/white"
                android:drawableTop="@drawable/x_alph"
                android:drawablePadding="10dp"
                android:background="@drawable/main_element_2"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="fill_horizontal"/>


        </GridLayout>

    </FrameLayout>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@null"
        android:contentDescription="Назад"
        android:src="@drawable/baseline_arrow_back_ios_24" />

</RelativeLayout>