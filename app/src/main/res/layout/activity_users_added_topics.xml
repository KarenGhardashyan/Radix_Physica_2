<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:background="@null"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="Назад" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/other"
            android:textColor="@color/textcolor"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:transitionName="usersadded"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Работы пользователей"
            android:padding="10dp"
            android:drawableTop="@drawable/userswork"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/main_element_2"
            android:contentDescription="opt... button" />


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Статья ......"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="ссылка на статью"
            android:textColor="#C5C2FF"
            android:textSize="20dp"
            android:autoLink="web"
            android:fontFamily="sans-serif-medium"/>


        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="контент .........."
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"/>


    </LinearLayout>

</ScrollView>
