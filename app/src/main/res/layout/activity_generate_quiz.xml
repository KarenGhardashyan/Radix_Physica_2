<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_background_gradient">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@null"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:contentDescription="Назад" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Quiztest"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_element_2"
        android:drawableTop="@drawable/robot"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="пройти опрос"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:transitionName="quiz" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Quiztest"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/option1Button"
        android:layout_width="wrap_content"
        android:background="@drawable/button_background_gradient"
        android:text="здесь будет один из ответов"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/option2Button"
        android:layout_width="wrap_content"
        android:text="здесь будет один из ответов"
        android:background="@drawable/button_background_gradient"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_below="@id/option1Button"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/option3Button"
        android:background="@drawable/button_background_gradient"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="здесь будет один из ответов"
        android:layout_height="wrap_content"
        android:layout_below="@id/option2Button"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/option4Button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background_gradient"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:text="здесь будет один из ответов"
        android:layout_height="wrap_content"
        android:layout_below="@id/option3Button"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/incorrectCounterTextView"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/option4Button"
        android:layout_marginTop="16dp"
        android:text="Incorrect Answers: 0"/>

    <TextView
        android:id="@+id/scoreTextView"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/incorrectCounterTextView"
        android:layout_marginTop="16dp"
        android:text="очки: 0"/>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreTextView"
        android:background="@drawable/button_background_gradient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Далее" />

</RelativeLayout>