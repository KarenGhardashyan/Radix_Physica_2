<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/moderator"
        android:id="@+id/moderator"/>

    <EditText
        android:id="@+id/editTextModeratorEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Email модератора"
        android:layout_below="@id/textView6"
        android:inputType="textEmailAddress"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonAddModerator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить модератора"
        android:layout_below="@id/editTextModeratorEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/moderator"
        android:layout_margin="10dp"
        android:text="Вы имеите достаточно прав чтобы добавить другого модератора" />

</RelativeLayout>
