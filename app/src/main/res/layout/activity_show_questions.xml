<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@null"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:contentDescription="Назад" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/questions"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="задания"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:transitionName="showquestions"
        android:textSize="18dp"
        android:drawableTop="@drawable/brain"
        android:padding="10dp"
        android:background="@drawable/main_element_2"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:layout_margin="10dp"/>


    <ListView
        android:id="@+id/listViewQuestions"
        android:layout_below="@id/questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="30dp"
        android:divider="#001F1E23"/>

</RelativeLayout>
